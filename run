#!/bin/sh

install() {
  cd src
	go get -t ./...
}

build() {
  cd src
	go build \
	  -ldflags "-X 'klog/app.BinaryVersion=$1' -X 'klog/app.BinaryBuildHash=$2'" \
	  -o ../out/klog \
	  app/cli/main/main.go
}

test() {
  cd src
	go test ./...
}

format() {
  cd src
	go fmt ./...
}

cli() {
  # When passing in a file, remember to prepend `../`
  cd src
	go run app/cli/main/main.go $@
}

# MAIN
task=$1
shift 1
$task $@
